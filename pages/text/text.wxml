<!--  selectable="true" -->
<!-- 默认情况下，text中额文本长按时不能选中的 -->
<text selectable="true">hello duanhb\n</text>

<!-- space:决定文本空格的大小 -->
<!-- ensp:半个中文字符大小，emsp:一个中文字符大小 -->
<text>hello duanhb\n</text>
<text space="nbsp">hello duanhb\n</text>
<text space="ensp">hello duanhb\n</text>
<text space="emsp">hello duanhb\n</text>

<!-- decode：是否解码文本 -->
<text decode="true">5 &gt; 3</text>
