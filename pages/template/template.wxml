<!--pages/template/template.wxml-->

<!-- 之前的时候，小程序是不支持自定义组件的，为了进行代码复用，就使用了template -->
<!-- 模板中包裹的内容，在没有调用之前，是不会进行任何渲染的 -->

<!-- 定义模板 -->
<!-- <template name="contentItem">
  <button size="mini" type="primary">{{btnText}}</button>
  <view>{{content}}</view>
</template> -->

<!-- 导入外部template模板 -->
<import src="/wxml/template.wxml"/>

<!-- 使用模板 is属性，data用来传值 -->
<template is="contentItem" data="{{btnText:'登录',content:'哈哈哈'}}"/>
<template is="contentItem" data="{{btnText:'注册',content:'嘿嘿嘿'}}"/>
<template is="contentItem" data="{{btnText:'警告',content:'呵呵呵'}}"/>


<!-- 
  关于wxml的导入有两种方式:
  import导入：
    1.主要是导入template
    2.特点，不能进行递归导入
  include引入：
    1.将公共的wxml中的组件抽取到一个文件中
    2.特点：不能导入template/wxs，可以进行递归导入
 -->